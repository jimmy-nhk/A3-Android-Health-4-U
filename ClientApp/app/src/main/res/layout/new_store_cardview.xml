<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newStoreCard"
    android:layout_width="140dp"
    android:layout_height="180dp"
    android:layout_marginHorizontal="2sp"
    android:orientation="vertical"
    android:clickable="true"
    android:backgroundTint="#00000000"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/newStoreImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/store_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/newStoreNameText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingVertical="3dp"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <RatingBar
                android:id="@+id/newStoreRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:rating="4.5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:progressTint="#FBC02D"
                android:isIndicator="true" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>