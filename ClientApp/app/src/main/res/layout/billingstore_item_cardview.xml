<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3sp"
    app:cardBackgroundColor="@color/transparent_100"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/billingstoreItemQuantity"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="100"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/billingstoreItemName"
            android:layout_width="300sp"
            android:maxWidth="300sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/billingstoreItemQuantity"
            android:text="item Name"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/billingstoreItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="price"
            android:textColor="@color/grey" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>