<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".fragment.StoreDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/storeCoverImg"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:adjustViewBounds="true"
            android:src="@drawable/food"
            android:scaleType="centerCrop" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20sp"
                    android:layout_marginTop="150sp"
                    android:background="@drawable/bordered_container"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/storeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5sp"
                        android:text="Bún thịt nướng Luludz, ngon khó cưỡng"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <!-- This is just a horizontal line-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5sp"
                        android:background="#CACACA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5sp"
                        android:weightSum="14">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Seller"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/storeFullname"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:paddingStart="4sp"
                            android:text="Nguyen Thanh Luan"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5sp"
                        android:weightSum="14">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Phone Number"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/storePhone"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:paddingStart="4sp"
                            android:text="0938429029"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5sp"
                        android:weightSum="14">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Email"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/storeMail"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:paddingStart="4sp"
                            android:text="afc.luan2508@gmail.con"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5sp"
                        android:weightSum="14">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Address"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/storeAddress"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:paddingStart="4sp"
                            android:text="285 Kha Vạn Cân, phường Hiệp Bình Chánh, thành phố Thủ Đức"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- This is just a horizontal line-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5sp"
                        android:background="#CACACA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5sp"
                        android:weightSum="14">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Rating"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/storeRating"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:paddingStart="4sp"
                            android:text="5sao"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5sp"
                        android:weightSum="14">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Sold items"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/storeSoldQuantity"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:paddingStart="4sp"
                            android:text="1000"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20sp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="5sp"
                        android:text="Item List"
                        android:textSize="30sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_store"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="0dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</FrameLayout>