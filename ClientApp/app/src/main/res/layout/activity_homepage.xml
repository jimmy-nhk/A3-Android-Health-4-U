        app:itemIconTint="@drawable/nav_selector"
        app:itemHorizontalTranslationEnabled="true"
        app:itemActiveIndicatorStyle="@style/Widget.Material3.BottomNavigationView"
        app:itemTextColor="@drawable/nav_selector"/>
