<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpStep1Activity"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Welcome,"
            android:textColor="@color/primary_blue_light"
            android:textAlignment="textStart"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="bold"
            android:textColor="#AEAEAE"
            android:text="Sign up to get started!"
            android:textAlignment="textStart"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">

        <EditText
            android:id="@+id/editFullNameSignUpTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:maxLength="50"
            android:hint="Full Name" />

        <EditText
            android:id="@+id/editUserNameSignUpTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:maxLength="50"
            android:hint="Username" />

        <EditText
            android:id="@+id/editEmailSignUpTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:hint="Email" />

        <EditText
            android:id="@+id/editPasswordSignUpTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:maxLength="50"
            android:hint="Password" />

        <EditText
            android:id="@+id/editConfirmPasswordSignUpTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:maxLength="50"
            android:inputType="textPassword"
            android:hint="Confirm Password" />

        <TextView
            android:id="@+id/errorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The password is not matched"
            android:backgroundTint="@color/red"
            android:textColor="@color/red" />

        <LinearLayout
            android:id="@+id/nextLinearLayoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_container"
            android:backgroundTint="@color/primary_blue"
            android:padding="8dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:onClick="onNextBtnClick">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_next"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>